package main;

public class Factorial {


    public static String run(int num) {
        float currentResultant;
        float prevResultant = num;
        String result = "NONE";

        for (int i = 2; i <= (num / 2); i++) {

            currentResultant = prevResultant / i;

            System.out.println(prevResultant + " / " + i + " = " + currentResultant);
            if (currentResultant == 1) {
                result = Integer.toString(i) + "!";
                break;
            } else if ( currentResultant < 1) {
                break;
            }
            prevResultant = currentResultant;
        }
        return result;
    }

}
